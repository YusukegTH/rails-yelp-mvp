<div class="container w-75 my-3 p-3 mx-auto text-center bg-light">
  <h1><%= @restaurant.name%></h1>
</div>

<div class="container border shadow-sm mx-auto my-3 p-3 bg-light rounded d-flex justify-content-between">
  <div class="d-flex flex-column justify-content-center">
    <h3><%= @restaurant.name%></h3>
    <p><em>Address:</em> <%= @restaurant.address%></p>
    <p><em>Phone number:</em> <%= @restaurant.phone_number%></p>
  </div>
  <div class="d-flex flex-column justify-content-end">
    <p class="fw-bold">Category:</p>
    <p><%= @restaurant.category.capitalize%></p>
  </div>
</div>

<div class="container w-75 my-3 p-3 mx-auto text-center">
  <h3>Reviews</h3>
</div>
<div class="container w-75 m-3 p-3 mx-auto text-center">
  <%= link_to "Leave a review",  new_restaurant_review_path(@restaurant.id), :class => "btn btn-primary"%>
</div>

<%= @restaurant.reviews.each do |review| %>

  <div class="container border shadow-sm mx-auto my-3 p-3 bg-light rounded d-flex flex-column justify-content-between">
    <p><i>"<%= review.content%>"</i></p>
    <p>Rating: <%= review.rating%> / 5</p>
   </div>

<% end %>
