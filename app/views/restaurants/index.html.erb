<div class="container w-75 my-3 p-3 mx-auto text-center bg-light">
  <h1>Restaurants</h1>
</div>

<% @restaurants.each do |restaurant| %>
  <%= link_to restaurant_path(restaurant), :class => "text-decoration-none text-black", remote: true do %>
    <div class="container shadow-sm mx-auto my-3 p-3 bg-light rounded d-flex justify-content-between">
      <div class="d-flex flex-column justify-content-center">
        <h3><%= restaurant.name%></h3>
        <p><em>Address:</em> <%= restaurant.address%></p>
        <p><em>Phone number:</em> <%= restaurant.phone_number%></p>
      </div>
      <div class="d-flex flex-column justify-content-end">
        <p class="fw-bold">Category:</p>
        <p><%= restaurant.category.capitalize%></p>
      </div>
    </div>
  <%end%>
<%end%>
